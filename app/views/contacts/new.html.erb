<div class ="about-callout">
<div class="container">
   <div class = "row">
        <h1 class="text-center emph">Get in Touch!</h1>
   </div>

      <div class="row top-buffer">
      <div class = "col-md-6 form-line">
        <%= form_for @contact do |f| %>
          <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :email %>
            <%= f.text_field :email, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :mobile %>
            <%= f.text_field :mobile, class: 'form-control' %>
          </div>
      </div>
      <div class = "col-md-6">
          <div class="form-group">
            <%= f.label :comments %>
            <%= f.text_area :comments, class: 'form-control', :cols => 10, :rows => 6 %>
          </div>
          <%= f.submit 'Submit', class: 'btn btn-default' %>
        <% end %>
      </div>

    </div>
           <div class = "row mh1">
        <h6>*required</h6>
      </div>
    </div>

</div>
</div>
